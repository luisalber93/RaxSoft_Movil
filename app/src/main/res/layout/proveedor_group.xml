<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/imageProveedor"
        android:src="@drawable/proveedor"
        android:contentDescription="@string/strContentIMagenProveedor"
        android:layout_weight=".3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/proveedorGroupNombre"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Office Depot S.A de C.V"
            android:textColor="#660066" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Papeleria"
            android:id="@+id/proveedorGrupoGiro"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>